# Sample .env file for Docker Compose deployments
# This file contains values that work with docker-compose.yml
# For local development (non-Docker), use .env.sample instead

# Database Configuration (matches docker-compose.yml MySQL service)
DBHOST=db
DBNAME=phpweave
DBUSER=phpweave_user
DBPASSWORD=phpweave_pass
DBCHARSET=utf8mb4

# Application Settings
DEBUG=0

# Usage:
# 1. For docker-compose.yml (traditional .env mounting):
#    cp .env.sample.docker .env
#    docker compose up -d
#
# 2. For docker-compose.env.yml (environment variables):
#    No .env file needed - uses environment variables with defaults
#    docker compose -f docker-compose.env.yml up -d
#
# 3. For docker-compose.dev.yml (development):
#    No .env file needed - uses environment variables with dev defaults
#    docker compose -f docker-compose.dev.yml up -d
#
# 4. For docker-compose.scale.yml (scaled deployment):
#    No .env file needed - uses environment variables with defaults
#    docker compose -f docker-compose.scale.yml up -d
