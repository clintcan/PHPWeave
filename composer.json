{
    "name": "phpweave/phpweave",
    "description": "Lightweight MVC PHP framework with modern routing, hooks system, async tasks, and connection pooling",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "mvc", "php", "router", "async", "hooks"],
    "authors": [
        {
            "name": "Clint Christopher Canada"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "vimeo/psalm": "^5.0"
    },
    "suggest": {
        "opis/closure": "Required for Async::run() with closures (background task serialization)"
    },
    "autoload": {
        "files": [
            "coreapp/dbconnection.php",
            "coreapp/hooks.php",
            "coreapp/models.php",
            "coreapp/libraries.php",
            "coreapp/controller.php",
            "coreapp/router.php",
            "coreapp/async.php",
            "coreapp/error.php",
            "coreapp/migration.php",
            "coreapp/migrationrunner.php",
            "coreapp/connectionpool.php"
        ]
    },
    "scripts": {
        "test": "echo 'Run: php tests/test_hooks.php'",
        "phpstan": "phpstan analyse --no-progress",
        "psalm": "psalm --no-progress",
        "psalm-security": "psalm --taint-analysis --no-progress",
        "check": [
            "@phpstan",
            "@psalm-security"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
