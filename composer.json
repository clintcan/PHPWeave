{
    "name": "phpweave/phpweave",
    "description": "Lightweight MVC PHP framework with modern routing, hooks system, async tasks, and connection pooling",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "mvc", "php", "router", "async", "hooks"],
    "authors": [
        {
            "name": "Clint Christopher Canada"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "vimeo/psalm": "^6.0"
    },
    "suggest": {
        "opis/closure": "Required for Async::run() with closures (background task serialization)",
        "fakerphp/faker": "Generate realistic fake data for database seeding (optional, built-in faker available)"
    },
    "autoload": {
        "classmap": [
            "coreapp/"
        ]
    },
    "scripts": {
        "test": "echo 'Run: php tests/test_hooks.php'",
        "phpstan": "phpstan analyse --no-progress --memory-limit=512M",
        "psalm": "psalm --no-progress",
        "psalm-security": "psalm --taint-analysis --no-progress",
        "check": [
            "@phpstan",
            "@psalm-security"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
